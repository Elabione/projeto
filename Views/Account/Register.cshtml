@model RegistroViewModel

<img class="bgregister" src="~/imagens/bg.png" alt="">

<div class="container pt-4">


    <div class="col-9 mx-auto shadow p-4 bg-white rounded">

        <h4>Registrar usu√°rio</h4>
        <form asp-controller="Account" asp-action="Register" method="post">

            <div class="row">
                <div class="col-md-6">

                    <div class="form-group mb-4">
                        <label asp-for="Nome"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mb-4">
                        <label asp-for="UserName"> </label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Numero"></label>
                        <input asp-for="Numero" class="form-control" />
                        <span asp-validation-for="Numero" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Cep"></label>
                        <input asp-for="Cep" class="form-control" />
                        <span asp-validation-for="Cep" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group mb-4">
                        <label asp-for="Estado"></label>
                        <input asp-for="Estado" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Cidade"></label>
                        <input asp-for="Cidade" class="form-control" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Bairro"></label>
                        <input asp-for="Bairro" class="form-control" />
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Endereco"></label>
                        <input asp-for="Endereco" class="form-control" />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>
                
                    <div class="form-group mb-4">
                        <div class="col-md-8 mt-2 mx-auto">
                            <input type="submit" class="btn text-white rounded-pill ms-5 ps-5 pe-5" style="background-color:#FF99B1" value="Criar conta" />
                        </div>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>