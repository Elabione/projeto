@model projeto.ViewModel.HomeViewModel
@{
    ViewData["Title"] = "Cardapio";
}
<partial name="_Carousel" />
<div class="container-fuid rosa my-3 p-5 d-flex align-items-center">
    <img src="~/imagens/destaques.png" alt="" class="mx-auto">
</div>

<div class="row row-cols-1 row-cols-md-2 g-3">
    @foreach (var item in Model.ItensEmDestaque)
    {
        <partial name="_Card" for="@item"></partial>
    }
</div>

<div class="d-flex justify-content-center">
    <button class="rounded-pill ps-5 pe-5 pt-4 pb-3 m-5 text-white border-0" style="background-color:#FF99B1"><h3>CÁRDAPIO COMPLETO</h3></button>
</div>