<div class="dropdown">
    <a class="btn btn-secondary dropdown-toggle ms-5 me-3" style="background-color:#FF99B1" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-
        expanded="false">

        Categoria
    </a>
    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>

                <a class="dropdown-item" asp-controller="Item" asp-action="List" style="color:rgb(255, 153, 177)" asp-route-categoria="@categoria.Nome">@categoria.Nome</a>

            </li>
        }
        <li class="dropdown-divider"></li>
        <li>

            <a class="dropdown-item" asp-controller="Item" asp-action="List" asp-route-categoria=""
                style="color:black">Todos os Itens</a>
        </li>
    </ul>
</div>