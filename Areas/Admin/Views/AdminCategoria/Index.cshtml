@model ReflectionIT.Mvc.Paging.PagingList<projeto.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1 class="rounded-pill rosa text-white p-2 text-center">Categoria</h1>

<form method="get" class="form-inline">
    <input name="filtro" class="form-control" placeholder="Pesquisar Categoria" value="@Model.RouteValue["Filtro"]" />
    <button type="submit" class="btn btn-marrom text-white">Procurar</button>
</form>
Total de Categorias : @Model.TotalRecordCount
<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>
<hr>
<p>
    <a asp-action="Create" class="rosa h4 p-2 ps-4 pe-3 rounded-pill link-light">Criar nova categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoriaId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoriaId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
