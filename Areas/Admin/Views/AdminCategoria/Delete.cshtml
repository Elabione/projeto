@model projeto.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h1 class="rounded-pill rosa text-white p-2 text-center">Deletar Categoria</h1>

<h3>Tem certeza de que deseja deletar essa categoria?</h3>
<h3>@ViewData["Erro"]</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a Lista</a>
    </form>
</div>
