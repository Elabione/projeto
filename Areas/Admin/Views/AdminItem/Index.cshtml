@model ReflectionIT.Mvc.Paging.PagingList<projeto.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1 class="rounded-pill rosa text-white p-2 text-center">Itens</h1>

<form method="get" class="form-inline">
<input name="filtro" class="form-control" placeholder="Buscar item"
value="@Model.RouteValue["Filtro"]" />
<button type="submit" class="btn btn-rosa text-white">Procurar</button>
</form>
Total de Itens : @Model.TotalRecordCount
<div>
<vc:pager paging-list="@Model"></vc:pager>
</div>

<p>
    <a asp-action="Create">Criar Novo Item</a>
</p>
<div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoCurta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoDetalhada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemPequenaUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destaque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoCurta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoDetalhada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <img src="@item.ImagemPequenaUrl" width="100px" asp-append-version="true">
            </td>
            <td>
               <img src="@item.ImagemUrl" width="100px" asp-append-version="true">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destaque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.CategoriaId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ItemId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ItemId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>